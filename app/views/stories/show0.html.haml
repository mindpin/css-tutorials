:javascript
  tutorial_data = #{@data.to_json}

.page-panels
  .panel.coding
    .panel.code
      .panel.css
        .bar
          %i.fa.fa-code
          %strong CSS
        .editor
          %textarea.code.css

      .panel.html
        .bar
          %i.fa.fa-code
          %strong HTML
        .editor
          %textarea.code.html
    
    .panel.tips
      .tip-info
        .avatar
        .dialog
          .dbox
          .click-to-continue{:style => 'display:none;'}
            %i.fa.fa-arrow-down
            %span 点击任意位置继续

  .panel.preview
    .bar
      %i.fa.fa-eye
      %strong 效果预览